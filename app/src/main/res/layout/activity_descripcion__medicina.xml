<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0F2F1"
    tools:context=".Receta.repeticiones.Descripcion_Medicina">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/Icono_midicina_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/ic_medical_services_black_48dp"></ImageView>

        <TextView
            android:id="@+id/txtView_medicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Medicina:"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:textColor="#64FFDA"
            android:textSize="35dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtView_recomendacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:text="Recormendacion de uso: "></TextView>

        <TextView
            android:id="@+id/txtView_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Status: "></TextView>
        <TextView
            android:id="@+id/txtView_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Cantidad: "></TextView>
        <TextView
            android:id="@+id/txtView_Inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Comienzo: "></TextView>
        <TextView
            android:id="@+id/txtView_Termina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Termina: "></TextView>

        <TextView
            android:id="@+id/txtView_Frecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Tomar: Cada dia"></TextView>

        <TextView
            android:id="@+id/txtView_repeticion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Tomar: veces al dia"></TextView>
        <TextView
            android:id="@+id/txtView_horario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="20dp"
            android:textColor="#7400b8"
            android:text="Horario alarmas: "></TextView>

        <TextView
            android:id="@+id/txtView_nota_midicina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:fontFamily="@font/amiko_semibold"
            android:textSize="30dp"
            android:textColor="#E91D64"
            android:text=""></TextView>



    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/bonotesfinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:gravity="bottom"
        android:layout_alignParentEnd="true"
        >
        <Button
            android:id="@+id/btn_REGRESAR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#515050"
            android:layout_marginStart="18dp"
            android:text="REGRESAR"
            />
        <Button
            android:id="@+id/button_eliminar_medicamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e63946"
            android:shadowColor="#6a040f"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="18dp"
            android:text="ELIMINAR MEDICAMENTO"
            />
    </LinearLayout>
</LinearLayout>