<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4E8EA"
    android:orientation="vertical"
    tools:context=".Receta.Add_Medicina">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <TextView
        android:layout_gravity="top"
        android:id="@+id/titular_medi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/amiko_bold"
        android:gravity="center"
        android:background="#2B0251"
        android:text="Medicamento"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titualr_registro">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/amiko_bold"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Nombre del medicamento:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/Txt_medic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:hint="correo@ejemplo.com"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/txtV_frecuncia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/amiko_bold"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Frecuencia:"
                android:textColor="#000000"
                android:textSize="15sp"
                />

            <Spinner
                android:id="@+id/id_Spinner_frecuencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF6D00"
                android:entries="@array/frecuncia_dias"
                android:fadeScrollbars="false"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scrollbarStyle="insideInset"
                android:padding="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:scrollbarSize="20dp"
                android:textAlignment="center"
                android:textDirection="firstStrong"></Spinner>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:fontFamily="@font/amiko_bold"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Â¿Cuantas veces al dia?"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Spinner
            android:id="@+id/id_Spinner_repeticion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF6D00"
            android:entries="@array/Repeticiones"
            android:fadeScrollbars="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:padding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:scrollbarSize="20dp"
            android:textAlignment="center"
            android:textDirection="firstStrong"></Spinner>
    </LinearLayout>


        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/amiko_bold"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Observacion para su uso:"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/edt_recordatorio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/textview_border"
            android:inputType="text"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fecha_inicio"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:hint="Fecha de Inicio:       "
            android:textColor="@color/green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btn_selefecha_inicio"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:text="Seleccionar fecha"
            android:background="#FF9E00"
            ></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_fecha_final"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:hint="Fecha Final:             "
            android:textColor="@color/green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/btn_selefecha_final"
            android:layout_margin="10dp"
            android:textColor="#fff"
            android:text="Seleccionar fecha"
            android:background="#FF9E00"
            ></Button>

    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/amiko_bold"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Horario"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textCursorDrawable="@color/colorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <FrameLayout
                        android:id="@+id/framecontainer_horario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    >
                    </FrameLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/bonotesfinal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:layout_alignParentEnd="true"
                >
                <Button
                    android:id="@+id/btn_horario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#515050"
                    android:layout_marginStart="18dp"
                    android:shadowColor="#CD2323"
                    android:text="Modificar horario"
                     />
                <Button
                    android:id="@+id/button_add_medi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF0000"
                    android:shadowColor="#CD2323"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="18dp"
                    android:text="Finalizar"
                     />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>